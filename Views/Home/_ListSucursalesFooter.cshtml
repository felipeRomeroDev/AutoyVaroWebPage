@model List<AutoyVaro.Sucursal>

<div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
    <div class="footer-widget">
        <h3 class="footer-widget-title">Sucursales</h3>
        <ul class="footer-menu list-style">

            @foreach (var item in Model)
            {
                if (item.visible)
                {
                    <li>
                        <a href="@Url.Action("Sucursal","Home", new {Id = item.Id })">
                            <i class="flaticon-next"></i>
                            @item.Descripción
                        </a>
                    </li>
                }
            }
       
        </ul>
    </div>
</div>