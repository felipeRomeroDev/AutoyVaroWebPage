
@{
    ViewBag.Title = "Requisitos";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap bg-spring">
    <img src="~/Content/assets3/img/breadcrumb/br-shape-1.png" alt="Image" class="br-shape-one xs-none">
    <img src="~/Content/assets3/img/breadcrumb/br-shape-2.png" alt="Image" class="br-shape-two xs-none">
    <img src="~/Content/assets3/img/breadcrumb/br-shape-3.png" alt="Image" class="br-shape-three moveHorizontal sm-none">
    <img src="~/Content/assets3/img/breadcrumb/br-shape-4.png" alt="Image" class="br-shape-four moveVertical sm-none">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-8 col-sm-8">
                <div class="breadcrumb-title">
                    <h2>Requisitos</h2>
                    <ul class="breadcrumb-menu list-style">
                        <li><a href="@Url.Action("Index","Cotizador")">Home </a></li>
                        <li>Requisitos</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-5 col-md-4 col-sm-4 xs-none">
                <div class="breadcrumb-img">
                    <img src="~/Content/assets3/img/breadcrumb/br-shape-5.png" alt="Image" class="br-shape-five animationFramesTwo">
                    <img src="~/Content/assets3/img/breadcrumb/br-shape-6.png" alt="Image" class="br-shape-six bounce">
                    <img src="~/Content/assets3/img/Documentos3.jpg" alt="Image">
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Breadcrumb End -->
<!-- Goal Section Start -->
<section class="goal-wrap ptb-100">
    <div class="container">
        <div class="row gx-5 align-items-center">
            <div class="col-lg-6">
                <div class="goal-img-wrap" style="box-shadow: 0 5px 15px rgb(0 0 0 / 60%); background-color: #ffffff; ">                    
                    <img src="~/Content/assets3/img/Documentos2.jpg" alt="Image">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="goal-content">
                    <div class="content-title style1">                        
                        <h2>Requisitos para la solicitud de tu crédito.</h2>
                    </div>
                    <ul class="content-feature-list style1 list-style">
                        <li><span><i class="flaticon-tick"></i></span>Factura o Refactura Original.</li>
                        <li><span><i class="flaticon-tick"></i></span>Tarjeta de Circulación.</li>
                        <li><span><i class="flaticon-tick"></i></span>INE o Pasaporte.</li>
                        <li><span><i class="flaticon-tick"></i></span>Comprobante de Domicilio Vigente.</li>

                        <li><span><i class="flaticon-tick"></i></span>Comprobante Bancario Vigente.</li>
                        <li><span><i class="flaticon-tick"></i></span>Última tenencia pagada (Te ayudamos a regularizarlas).</li>
                        <li><span><i class="flaticon-tick"></i></span>Licencia de Conducir Vigente.</li>
                        <li><span><i class="flaticon-tick"></i></span>Duplicado de Llaves.</li>
                    </ul>
                    <div class="p-25 text-right">
                        <a href="@Url.Action("Index", "Cotizador")" class="btn style1">Inicia tu Solicitud</a>
                    </div>

                    

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Goal Section End -->
